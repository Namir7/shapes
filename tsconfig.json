{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "build",
    "declaration": true,
    "declarationDir": "build/types"
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"]
}
